<Window x:Class="ThreeDMolecules.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helix="http://helix-toolkit.org/wpf"
        mc:Ignorable="d"
        Title="3DMolecules - 3D Molecular Visualization" Height="900" Width="1600">
    <!--
        Main window for the 3DMolecules application.
        Contains a HelixViewport3D for rendering 3D molecular structures and boundaries.
        Lighting is set up for realistic shading and highlights.
        Camera is set for full 3D rotation and zoom.
    -->
    <Grid>
        <helix:HelixViewport3D x:Name="helixViewport">
            <helix:HelixViewport3D.Camera>
                <PerspectiveCamera Position="0, -30, 10" LookDirection="0,30,-10" UpDirection="0,0,1" FieldOfView="45"/>
            </helix:HelixViewport3D.Camera>
            <!-- Add lights -->
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <Model3DGroup>
                        <!-- Ambient light to provide general illumination -->
                        <AmbientLight Color="Gray" />
                        <!-- Directional lights to create shadows and highlights from different angles -->
                        <DirectionalLight Color="White" Direction="1,-1,-1" />
                        <DirectionalLight Color="White" Direction="-1,1,1" />
                        <!-- Strong top-down light to highlight the open top of the cylinder -->
                        <DirectionalLight Color="White" Direction="0,-1,0" />
                    </Model3DGroup>
                </ModelVisual3D.Content>
            </ModelVisual3D>
        </helix:HelixViewport3D>
    </Grid>
</Window>
